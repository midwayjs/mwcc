{
  "name": "@midwayjs/mwcc",
  "version": "0.1.12",
  "description": "Midway Compiler Collection",
  "main": "dist/index",
  "typings": "dist/index.d.ts",
  "scripts": {
    "prepublish": "npm run build",
    "lint": "standardx '**/*.[tj]s'",
    "build": "tsc -p .",
    "test": "mocha -r ts-node/register -t 1000000 test/**/*.test.ts",
    "cov": "nyc --reporter text --reporter lcov mocha -r ts-node/register -t 1000000 test/**/*.test.ts",
    "ci": "npm run test"
  },
  "keywords": [
    "midway",
    "compiler",
    "collection"
  ],
  "files": [
    "bin",
    "dist",
    "src"
  ],
  "license": "MIT",
  "eslintConfig": {
    "rules": {
      "no-unused-vars": "off",
      "@typescript-eslint/no-unused-vars": "error"
    }
  },
  "standardx": {
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint/eslint-plugin"
    ],
    "env": {
      "mocha": true
    }
  },
  "devDependencies": {
    "@types/mocha": "^7.0.2",
    "@types/node": "^13.9.5",
    "@typescript-eslint/eslint-plugin": "^2.25.0",
    "@typescript-eslint/parser": "^2.25.0",
    "globby": "^11.0.0",
    "mocha": "^7.1.1",
    "nyc": "^15.0.0",
    "standardx": "^5.0.0",
    "ts-node": "^8.8.1",
    "typescript": "^3.8.3"
  },
  "dependencies": {
    "@midwayjs/ncc": "^0.22.2-1",
    "source-map": "^0.7.3",
    "source-map-support": "^0.5.16"
  },
  "peerDependencies": {
    "typescript": "^3.0.0"
  },
  "repository": {
    "type": "git",
    "url": "http://github.com/midwayjs/mwcc.git"
  }
}
